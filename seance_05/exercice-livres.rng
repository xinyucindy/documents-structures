<element name="bibliotheque" xmlns="http://relaxng.org/ns/structure/1.0" datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
  <oneOrMore>
    <element name="etagere">
      <attribute name="type"/>
      <optional>
        <attribute name="poussiere">
          <data type="boolean"/>
        </attribute>
      </optional>
      <zeroOrMore>
        <element name="livre">
          <attribute name="isbn">
            <data type="int"/>
          </attribute>
          <attribute name="prix">
            <data type="float"/>
          </attribute>
          <element name="titre"><text/></element>
          <element name="auteur">
            <choice>
              <group>
                <attribute name="nom"/>
                <attribute name="prenom"/>
              </group>
              <group>
                <interleave>
                  <element name="nom"><text/></element>
                  <element name="prenom"><text/></element>
                </interleave>
              </group>
            </choice>
          </element>
        </element>
      </zeroOrMore>
    </element>
  </oneOrMore>
</element>